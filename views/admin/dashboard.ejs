<nav><%- include('../patrials/header')%></nav>
<div class="admin-title">
    <h2>Posts</h2>
    <a href="/add-post" class="button">+ Add New</a>
  </div>
  
  <ul class="admin-posts">
  
    <% data.forEach(post => { %>
     
      <li>
        <a href="/post/<%= post._id %>">
          <%= post.title %> &nearr;
        </a>
        <p><%= post.description %></p>
        <div class="admin-post-controls">
          <a href="/edit-post/<%= post._id %>" class="btn">Edit</a>
  
          <form action="/delete-post/<%= post._id %>?_method=DELETE" method="POST">
            <input type="submit" value="Delete" class="btn-delete btn">
          </form>
  
        </div>
  
      </li>
  
    <% }) %>
</ul>
 <!-- Pagination -->
 <div>
  <% if (currentPage > 1) { %>
      <a href="?page=<%= currentPage - 1 %>&limit=<%= limit %>">Previous</a>
  <% } %>
  <span>Page <%= currentPage %> of <%= totalPages %></span>
  <% if (currentPage < totalPages) { %>
      <a href="?page=<%= currentPage + 1 %>&limit=<%= limit %>">Next</a>
  <% } %>
</div>
<nav><%- include('../patrials/footer')%></nav>